{{!< layout-general-en}} {{#post}} <section class="bg-grey padding-top-45 padding-bottom-45 clearfix">
    <div class="container">
        <div class="row">
            <div class="section-title">
                <div class="col-md-12">
                    <h2>Company News</h2>
                </div>
            </div>
        </div><!-- End Row -->
    </div><!-- End container -->

    </section><!--  End Section -->

    <!-- Section BreadCrumb -->
    <div class="no-padding border-bottom">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <ol class="breadcrumb breadcrumb-finance">
                        <li>
                            {{#link href='/en'}}
                            <i class="fa fa-home" aria-hidden="true"></i>
                            Home
                            {{/link}}
                        </li>
                        <li class="active">News</li>
                    </ol>
                </div><!--  End col -->
            </div>
            <!-- End Row -->
        </div><!-- End container -->
    </div><!--  End Section -->

    <div class="line"></div>

    <!--Blog Detail -->
    <section class="no-padding">
        <div class="container">
            <div class="row">
                <div id="primary" class="content-area col-md-12 no-padding-right padding-bottom-70">
                    <main id="main" class="padding-top-50">
                        <h1>{{title}}</h1>
                        <div class="latest-news-data">
                            {{!-- <span class="tags"><a href="#">{{tags}}</a></span> --}}
                            <span class="dates">{{date
                                published_at
                                format="MMMM DD, YYYY"
                                }}</span>
                        </div>
                        <div class="lastest-news-detail">
                            <img style="margin:25px 0;max-height:500px;min-width:100%" src="{{img_url feature_image}}"
                                class="img-responsive" alt="Image" />
                            <h4>{{excerpt}}</h4>
                            <p>{{content}}</p>
                        </div>

                    </main>
                </div>
                <!-- End Col -->

            </div><!-- End Row -->

        </div><!-- End container -->
    </section><!--  End Section -->

    {{/post}}
    <script>
        addEventListener("load", (event) => {
            let h = window.innerHeight;
            document.getElementById("primary").style.minHeight = (screen.availHeight - 200) + "px"
        })
    </script>
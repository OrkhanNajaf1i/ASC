{{!< layout-general-en}} <main class="{{post_class}}">
    <section class="bg-grey padding-top-45 padding-bottom-45 clearfix">
        <div class="container">
            <div class="row">
                <div class="section-title">
                    <div class="col-md-12">
                        <h2>Our services</h2>
                    </div>
                </div>
            </div>
            <!-- End Row -->
        </div>
        <!-- End container -->
    </section>
    <!-- Section BreadCrumb -->
    <div class="no-padding border-bottom">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <ol class="breadcrumb breadcrumb-finance">
                        <li>
                            {{#link href="/en"}}
                            <i class="fa fa-home" aria-hidden="true"></i>
                            Home {{/link}}
                        </li>
                        <li class="active">Our Services</li>
                    </ol>
                </div>
                <!--  End col -->
            </div>
            <!-- End Row -->
        </div>
        <!-- End container -->
    </div>
    <!--  End Section BreadCrumb-->
    <!-- List services section -->
    <section class="padding-top-50 padding-bottom-20">
        <div class="container">
            <div class="row">
                <div id="primary" class="services-wrap">
                    <div class="services-list-contain">
                        {{#get "posts" limit="all" filter="tag:services+tag:en"}}
                        {{#foreach posts}}
                        <div class="item-services">
                            <div class="thumbnail">
                                <a href="{{url}}" class="services-3-column-img-container">
                                    <img src="{{img_url feature_image}}" alt="" />
                                    <h4>{{title}}</h4>
                                </a>
                                <div class="caption">
                                    <p>
                                        {{excerpt}}
                                    </p>
                                </div>
                            </div>
                            <a class="learn-more" href="{{url}}"><i class="fa fa-caret-right" aria-hidden="true"></i>
                                {{t "Read more"}}
                            </a>
                        </div>
                        {{/foreach}}
                        {{/get}}
                    </div>

                </div>
                <!--  End col -->
            </div>
            <!-- End Row -->
        </div>
        <!-- End container -->
    </section>
    </main>
    <script>
        (function () {
            let h = window.innerHeight;
            document.getElementById("primary").style.minHeight = (screen.availHeight - 200) + "px"
        })()
    </script>
    <style>
        .services-wrap div.services-list-contain div.item-services {
            width: auto;
            min-width: auto;
            max-width: 400px;
            margin: 0px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }


        @media screen and (min-width:1200px) {
            div.services-list-contain {
                display: grid;
                grid: auto / 360px 360px 360px;
                gap: 45px;
            }

            div.item-services>div.thumbnail img,
            div.item-services>div.thumbnail a {
                height: 200px;
                max-height: 200px;
            }
        }

        @media screen and (max-width:1200px) {
            div.services-list-contain {
                display: grid;
                grid: auto / auto auto;
                gap: 45px;
            }

            div.item-services>div.thumbnail img,
            div.item-services>div.thumbnail a {
                height: 200px;
                max-height: 200px;
            }
        }

        @media screen and (max-width:992px) {
            div.services-list-contain {
                display: grid;
                grid: auto / auto;
                gap: 45px;
            }

            div.item-services>div.thumbnail img,
            div.item-services>div.thumbnail a {
                height: 280px;
                max-height: 280px;
            }

            .services-wrap div.services-list-contain div.item-services {
                width: 100%;
                min-width: 100%;
                max-width: 100%;
                margin: 0px;
                padding: 0px;
                display: flex;
                flex-direction: column;
                justify-content: space-between;
            }
        }

        @media screen and (max-width:576px) {

            div.item-services>div.thumbnail img,
            div.item-services>div.thumbnail a {
                height: 200px;
                max-height: 200px;
            }
        }
    </style>